{
  "suggest.enablePreview": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
//        "compilationDatabaseDirectory": ".",
        "cache": {
          "directory": ".ccls_cache"
        }
      }
    },
    "hdlChecker": {
      "command": "hdl_checker",
      "args": [
        "--lsp"
      ],
      "filetypes": [
        "vhdl",
        "verilog"
//        "systemverilog"
      ]
    }
  },

  "python.linting.pylintEnabled": false, 
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args" : ["--ignore=F401,E111,E301,E262,E226,E265,E501,E221,W291,E231,E261,W293,E203,E227,E114,E271,E222,E303,E266,E116,E305,E115,E302,E225,E272,E228,E201,E402,E124,E126,E202,E121,E127,E241,E128,E125,W503,W191,W605,E211,E902,E502"]
}
